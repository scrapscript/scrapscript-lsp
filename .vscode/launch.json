{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "extensionHost",
      "request": "launch",
      "name": "Launch Extension",
      "runtimeExecutable": "${execPath}",
      "args": [
          "--extensionDevelopmentPath=${workspaceFolder}",
          "${workspaceFolder}"
      ],
      "outFiles": [
          "${workspaceFolder}/client/out/**/*.js",
          "${workspaceFolder}/server/out/**/*.js",
      ],
      "autoAttachChildProcesses": true,
      "preLaunchTask": {
        "type": "npm",
        "script": "watch"
      }
    }
  ]
}
